<html>
<head>
	<meta charset="utf-8">
	<title>Student Register</title>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
	<div class="container">
		<div id="head">
			<div>
				<h2>Student Register</h2>
			</div>
			<div align='center'>
				<form action="/search" method="POST">
					<input type="text" name="search" required id="search" placeholder="Search by RollNo, Name">
					<button type="submit" class="searchbtn">Search</button>
				</form>
			</div>
			<div align='right'>
				<a href='/displayAllStudent' class='btn'>Display All Student</a>
				<a href='/addStudent' class="btn">Add Student</a>
			</div>
		</div>
		<div class="content">
			{{#if msg1}}
			<div id="modalbox">
				<h2>Not Found Any Student!</h2>
			</div>
			{{/if}}
			{{#if msg2}}
			<div id="tb">
				<table id="table">
					<thead>
						<tr>
							<th>Name</th>
							<th>Age</th>
							<th>Roll No.</th>
							<th>Gender</th>
							<th width="350px">Action</th>
						</tr>
					</thead>
					<tbody id="tablebody">
						{{#data}}
						  <tr>
							  <td>{{fname}} {{lname}}</td>
							  <td>{{age}}</td>
							  <td>{{rollno}}</td>
							  <td>{{gender}}</td>
							  <td>
								  <a href="/displayStudent?RollNo={{rollno}}" id="displaybtn"> Display Student </a>
								  <a href="/editStudent?RollNo={{rollno}}" id="editbtn"> Edit Student </a>
								  <a href="/deleteStudent?RollNo={{rollno}}" id="deletebtn"> Delete Student </a>
							  </td>
						  </tr> 
						  {{/data}} 
					</tbody>
				</table>
			</div>
			{{/if}}
		</div>
		<div id="footer">
			<h4>TOTAL STUDENT :- {{Total}} </h4>
			<a href="/reset" onclick="resetStudent()">Reset</a>
		</div>
	</div>
	<script src="index.js"></script>
	</body>
</html>